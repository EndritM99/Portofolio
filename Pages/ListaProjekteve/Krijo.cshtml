@page
@model Portofolio.Pages.ListaProjekteve.KrijoModel

<br />  

<h2 class="text-info">Krijo Projekt te Ri</h2>

<div class="border container" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly">  </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="projektet2.Autori"></label>
            </div>
            <div class="col-6">
                <input asp-for="projektet2.Autori" class="form-control" />
            </div>
            <span asp-validation-for="projektet2.Autori" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="projektet2.EmriProjektit">Emri Projektit</label>
            </div>
            <div class="col-6">
                <input asp-for="projektet2.EmriProjektit" class="form-control" />
            </div>
            <span asp-validation-for="projektet2.EmriProjektit" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="projektet2.Pershkrimi"></label>
            </div>
            <div class="col-6">
                <input asp-for="projektet2.Pershkrimi" class="form-control" />
            </div>
            <span asp-validation-for="projektet2.Pershkrimi" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="projektet2.URL"></label>
            </div>
            <div class="col-6">
                <input asp-for="projektet2.URL" class="form-control" />
            </div>
            <span asp-validation-for="projektet2.URL" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Krijo" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Kthehu te Lista</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}
